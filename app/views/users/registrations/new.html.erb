<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

 <div class="field">
    <%= f.label :Roles %><br />
    <%= f.radio_button :role, :manager%>
    <%= f.label :role, "Manager", :value => "manager"  %>
    <%= f.radio_button :role, :developer, :checked => true %>
    <%= f.label :role, "Developer", :value => "developer" %>
    <%= f.radio_button :role, :qa, :checked => true %>
    <%= f.label :role, "QA", :value => "qa" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
